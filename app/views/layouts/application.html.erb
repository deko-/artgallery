<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Sandbox Contemporary" %></title>
    <%= stylesheet_link_tag "compiled/resets", :media => "screen" %>
    <%= stylesheet_link_tag "screen.css" %>
    <%= javascript_include_tag "compiled/jquery.min.js", "compiled/rails.min.js", "application.js" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="wrapper">
    <div id="container">


   
   		<%= render :partial => '/artworks/navigation' %>

   	    <% flash.each do |name, msg| %>
	      <%= content_tag :div, msg, :id => "flash_#{name}" %>
	    <% end %>
	    <%= content_tag :h1, yield(:title) if show_title? %>
	    <div id="content">
	    	<%= yield %>
			<div id="footer">
				<img style ="margin-top: 25px" src="/images/logo_grey.png">
				<div class="links">
					<div class="box">
					<h2>Get in touch</h2>
						<ul>
							<li><a href="#">About</a></li>			
							<li><a href="#">Contact</a></li>
							<li><a href="#">Terms of Use</a></li>
							<li><a href="#"></a></li>
						</ul>
					</div>
					<div class="box">
					<h2>Social Media</h2>
						<ul>
							<li><a href="#">Facebook</a></li>			
							<li><a href="#">Twitter</a></li>
							<li><a href="#"></a></li>
							<li><a href="#"></a></li>
						</ul>
					</div>
				</div>
			</div>
	    </div>	

    </div>
  </div>

	<!-- Google Analytics -->
  	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-22655023-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
  </body>
</html>
