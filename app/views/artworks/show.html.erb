<p id="notice"><%= notice %></p>
<div class="animation_box">
	<div class="slide_box">
		<div class="slideInner">
			<div class="slide">
				<% if @artwork %>
					<%= image_tag @artwork.image_url, :class => "" %>
				<% end %>
			</div>
		</div>
	</div><!-- slide_box end -->	
</div><!-- animation_box end -->
<div class="description">
	<div class="name">
		<h2><%= @artwork.name %></h2>
		<span> <%= link_to @artwork.artist.name, artist_path(@artwork.artist), :class => "author" %></span>
	</div>
	<div class="price">
		<span>own it for <a href="#">450<b>â‚¬</b></a></span>
	</div>
	<%= facebook_like %>
</div>
<%= @artwork.description %>
</div>


<h2>Comments</h2>
<%= render :partial => "comments/comment", :collection => @artwork.comments %>

<br />
<%= form_for([@artwork, @artwork.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_artwork_path(@artwork) %> |
<%= link_to 'Back', artworks_path %>
