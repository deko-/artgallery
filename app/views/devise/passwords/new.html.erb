<%= devise_error_messages! %>
<div id="form_wrapper" class="form_wrapper">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		<h3 style="font-family: georgia;">Forgot your password?</h3>
  	<div>
			<%= f.label :email %>
  		<%= f.email_field :email %>
		</div>
  	<div class="bottom">
			<%= f.submit "Send me a new password" %>
			<%= link_to "You have an account already? Sign in here", new_user_session_path(), :class => "linkform" %>
			<%= link_to "New to Sandbox Contemporary? Register here", new_user_registration_path(), :class => "linkform" %>
		</div>
	<% end %>
</div>